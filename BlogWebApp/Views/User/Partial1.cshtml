@model IEnumerable<EntityLayer.Concrete.Autor>

<div class="tab-pane" id="settings">
    @using (Html.BeginForm("UpdateUserProfile", "User", FormMethod.Post))
    {
        foreach (var item in Model)
        {
    <form class="form-horizontal">
        <div class="form-group row">
            @*<label for="inputName" class="col-sm-2 col-form-label">Yazar Id</label>*@
            <div class="col-sm-10">
                <input type="hidden" class="form-control" name="AutorId" value="@item.AutorId">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Ad Soyad</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AutorName" value="@item.AutorName">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Mail Adresi</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" name="AutorMail" value="@item.AutorMail">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName2" class="col-sm-2 col-form-label">Meslek</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AutorTitle" value="@item.AutorTitle">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputExperience" class="col-sm-2 col-form-label">Yetenekler</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AutorAboutShort" value="@item.AutorAboutShort">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Telefon</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AutorPhoneNumber" value="@item.AutorPhoneNumber">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Fotoğraf</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AutorImage" value="@item.AutorImage">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AutorPassword" value="@item.AutorPassword">
            </div>
        </div>
        @*<div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Şifre Tekrar</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputSkills">
            </div>
        </div>*@
        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Hakkımda</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AutorDescription" value="@item.AutorDescription">
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> Şifremi değiştirmek istiyorum.
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-danger">Bilgilerimi Güncelle</button>
            </div>
        </div>
    </form>
    }
    }
</div>

