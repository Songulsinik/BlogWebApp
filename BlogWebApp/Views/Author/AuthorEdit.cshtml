@model EntityLayer.Concrete.Autor
@{
    ViewBag.Title = "AuthorEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2></h2>
<form class="form-group" method="post">
    @Html.Label("Id")
    @Html.TextBoxFor(x => x.AutorId, new { @class = "form-control" })
    <br />
    @Html.Label("Yazar Adı Soyadı")
    @Html.TextBoxFor(x => x.AutorName, new { @class = "form-control" })
    <br />
    @Html.Label("Resim Yolu")
    @Html.TextBoxFor(x => x.AutorImage, new { @class = "form-control" })
    <br />
    @Html.Label("Yazar Yetenekleri")
    @Html.TextBoxFor(x => x.AutorAboutShort, new { @class = "form-control" })
    <br />
    @Html.Label("Yazarın Statüsü")
    @Html.TextBoxFor(x => x.AutorTitle, new { @class = "form-control" })
    <br />
    @Html.Label("Mail Adresi")
    @Html.TextBoxFor(x => x.AutorMail, new { @class = "form-control" })
    <br />
    @Html.Label("Şifre")
    @Html.TextBoxFor(x => x.AutorPassword, new { @class = "form-control" })
    <br />
    @Html.Label("Telefon")
    @Html.TextBoxFor(x => x.AutorPhoneNumber, new { @class = "form-control" })
    <br />
    @Html.Label("Hakkında")
    @Html.TextAreaFor(x => x.AutorDescription, 3, 20, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>

