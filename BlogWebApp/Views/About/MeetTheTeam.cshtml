@model IEnumerable<EntityLayer.Concrete.Autor>

<div class="site-section">
    <div class="container">
        <div class="row mb-5 justify-content-center">
            <div class="col-md-5 text-center">
                <h2>Yazar Listemiz</h2>
                <p>Sizlerle birbirinden güzel içerikler sunan yazarlarımızın listesi aşağıda yer almaktadır. 
                Eğer siz de yazarımız olmak isterseniz iletişim kısmından bize ulaşabilirsiniz. </p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
            <div class="col-md-6 col-lg-4 mb-5 text-center">
                <img src="@item.AutorImage" alt="Image" class="img-fluid w-50 rounded-circle mb-4">
                <h2 class="mb-3 h5">@item.AutorName</h2>
                <p>@item.AutorDescription</p>

                <p class="mt-5">
                    <a href="#" class="p-3"><span class="icon-facebook"></span></a>
                    <a href="#" class="p-3"><span class="icon-instagram"></span></a>
                    <a href="#" class="p-3"><span class="icon-twitter"></span></a>
                </p>
            </div>
            }
        </div>
    </div>
</div>
